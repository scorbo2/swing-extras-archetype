<archetype-descriptor xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0"
                      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                      xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0 http://maven.apache.org/xsd/archetype-descriptor-1.0.0.xsd"
                      name="${artifactId}">

    <fileSets>

        <!-- Source code that needs filtering and packaging -->
        <fileSet filtered="true" packaged="true">
            <directory>src/main/java</directory>
        </fileSet>

        <!-- Resource files that need filtering and packaging -->
        <fileSet filtered="true" packaged="true">
            <directory>src/main/resources</directory>
            <excludes>
                <exclude>example-images/**</exclude>
            </excludes>
        </fileSet>

        <!-- Resource files that do NOT need filtering or packaging -->
        <!-- I really want to package these in the same com/example/artifact structure as above, -->
        <!-- but the archetype plugin always seems to perform variable substitution on my images, -->
        <!-- rendering them useless. So, I have to move them out to a top-level resource directory. -->
        <!-- This is HIGHLY annoying but, I can't find any other solution to it. -->
        <fileSet filtered="false" packaged="false">
            <directory>src/main/resources</directory>
            <includes>
                <include>example-images/**</include>
            </includes>
        </fileSet>

        <!-- Root-level files that need filtering -->
        <fileSet filtered="true" packaged="false">
            <directory></directory>
            <includes>
                <include>README.md</include>
                <include>installer.props</include>
            </includes>
        </fileSet>

        <!-- Root-level files that do not need filtering -->
        <fileSet filtered="false" packaged="false">
            <directory></directory>
            <includes>
                <include>.gitignore</include>
                <include>.editorconfig</include>
            </includes>
        </fileSet>
    </fileSets>

    <requiredProperties>
        <requiredProperty key="artifactNameLowerCase">
            <!-- Will convert "Test-App_test 01" to "testapptest01" -->
            <defaultValue>${artifactId.toLowerCase().replaceAll("[\s-_]", "")}</defaultValue>
        </requiredProperty>

        <requiredProperty key="artifactNamePascalCase">
            <!-- Expression language is too limited to do this, so start with a simple default -->
            <defaultValue>NewProject</defaultValue>
        </requiredProperty>
    </requiredProperties>

</archetype-descriptor>
